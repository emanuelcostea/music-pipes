{
    "server": {
        "app": {
            "slogan": "We push the web forward"
        }
    },
    "connections": [
        {
            "port": 3000,
            "labels": ["api"]
        }
    ],
    "registrations": [
        {
            "plugin": {
                "register": "./alive"
            }
        }, {
            "plugin": {
                "register": "./auth"
            }
        }, {
            "plugin": {
                "register": "./sources"
            }
        }, {
            "plugin": {
                "register": "./rooms"
            }
        }, { 
            "plugin": {
                "register": "hapi-nedb",
                "options": {
                    "collections": {
                        "session": {}
                    },
                    "directory": "./tmp",
                    "timestampData": true
                }
            }
        },{
            "plugin": {
                "register": "good",
                "options": {
                    "ops": {
                        "interval": 30000000
                    },
                    "reporters": {
                        "console": [
                            {
                                "module": "good-squeeze",
                                "name": "Squeeze",
                                "args": [
                                    {
                                        "log": "*",
                                        "error": "*",
                                        "response": "*",
                                        "ops": "*"
                                    }
                                ]
                            },
                            {
                                "module": "good-console"
                            },
                        "stdout" ]
                    }
                }
            }
        }
    ]
}